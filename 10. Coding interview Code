//Dado 2 arrays, crear una funcion que haga saber al usuario si entre los dos arrays tienen un elemento en comun
//For Example:
//const array1 = ['a', 'b', 'c', 'x'];
//const array2 = ['z', 'y', 'i'];
//should return false.
//-----------
//const array1 = ['a', 'b', 'c', 'x'];
//const array2 = ['z', 'y', 'x'];
//should return true.

// 2 parameters - arrays - no size limit
// return true or false

//Solution 1

function containsCommonItem(arr1, arr2) {
  for (let i=0; i < arr1.length; i++) {
    for (let j=0; j < arr2.length; j++){
      if(arr1[i] === arr2[j])
        return true;
    }
  }
  return true;
}

//O(a*b) Memory Complexity
//Es tricky ya que el tamaÃ±o de los dos arrays puede cambiar por eso puede ser O(n^2).
//O(1) Space Complexity

//Solucion 2

function containsCommonItem2(arr1, arr2) {
  // loop through first array and create object where properties === items in the array
  // can we assume always 2 params?
  
  let map = {}
  for (let i=0; i<arr1.length; i++){
    if(!map[arr1[i]]){
      const item = arr1[i];
      map[item] = true;
    }
  }
  
  // loop through second array and check if item in second array exists on created object. 
  for (let j=0; j < arr2.length; j++) {
    if(map[arr2[j]])
      return true;
  }
  
  return false;
}


//O(a + b) Time Complexity
//O(a) Space Complexity

